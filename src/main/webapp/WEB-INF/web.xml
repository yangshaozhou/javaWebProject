<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <!--    类名-->
        <servlet-name>LoginServlet</servlet-name>
        <!--    所在包-->
        <servlet-class>com.takeout.servlet.user.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.takeout.servlet.user.RegisterServlet</servlet-class>
    </servlet>
   
    <servlet>
        <servlet-name>AddMenuServlet</servlet-name>
        <servlet-class>com.takeout.servlet.goods.UpdateGoods</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>com.takeout.servlet.goods.ShowAllGoods</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>QueryGoodsServlet</servlet-name>
        <servlet-class>com.takeout.servlet.goods.QueryGoodsById</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ModifyMenuServlet</servlet-name>
        <servlet-class>com.takeout.servlet.goods.ModifyGoods</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.takeout.servlet.order.ManageOrders</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ChangeOrderStatus</servlet-name>
        <servlet-class>com.takeout.servlet.order.ChangeOrderState</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>OrderDetail</servlet-name>
        <servlet-class>com.takeout.servlet.order.OrderDetail</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.takeout.servlet.user.modifyAdminInfo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.takeout.servlet.user.LogoutServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <!--    访问网址-->
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    
   <servlet-mapping>
       <servlet-name>MenuServlet</servlet-name>
       <url-pattern>/showAllGoods</url-pattern>
   </servlet-mapping> 
    
    <servlet-mapping>
        <servlet-name>AddMenuServlet</servlet-name>
        <url-pattern>/addGoods</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>QueryGoodsServlet</servlet-name>
        <url-pattern>/queryGoods</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ModifyMenuServlet</servlet-name>
        <url-pattern>/modifyGoods</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/ManageOrders</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ChangeOrderStatus</servlet-name>
        <url-pattern>/ChangeOrderStateAdmin</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>OrderDetail</servlet-name>
        <url-pattern>/OrderDetailAdmin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/ModifyAdminInfo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
</web-app>
